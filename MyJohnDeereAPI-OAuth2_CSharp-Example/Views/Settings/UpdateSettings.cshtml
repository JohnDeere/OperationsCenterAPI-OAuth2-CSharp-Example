@model MyJohnDeereAPI_OAuth2_CSharp_Example.Models.JDeere

@{
   
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <title>UpdateSettings</title>
</head>
<body>

    <form method="get">
        <label for="FirstName"><strong>Client Id:</strong></label><br />
        <input placeholder="Your Client Id goes here" size="100" disabled type="text" id="ClientId" name="ClientId" value="@Model.ClientId"><br /><br />
        <label for="ClientSecret"><strong>Client Secret:</strong></label><br />
        <input placeholder="Your Client Secret goes here" size="100" disabled type="text" id="ClientSecret" name="ClientSecret" value="@Model.ClientSecret"><br /><br />
        <label for="AuthorizationEndpoint"><strong>Authorization Endpoint:</strong></label><br />
        <input placeholder="Your Authorization Endpoint goes here" size="100" disabled type="text" id="AuthorizationEndpoint" name="AuthorizationEndpoint" value="@Model.AuthorizationEndpoint"><br /><br />
        <label for="TokenEndpoint"><strong>Token Endpoint:</strong></label><br />
        <input placeholder="Your Token Endpoint goes here" size="100" disabled type="text" id="TokenEndpoint" name="TokenEndpoint" value="@Model.TokenEndpoint"><br /><br />
        <label for="AuthorizationEndpoint"><strong>Scopes:</strong></label><br />
        <input placeholder="Your Scopes goes here" size="100" disabled type="text" id="Scopes" name="Scopes" value="@Model.Scopes"><br /><br />
        <label for="APIEndPoint"><strong>API Endpoint:</strong></label><br />
        <input placeholder="Your APIEnd Point goes here" size="100" disabled type="text" id="APIEndPoint" name="APIEndPoint" value="@Model.APIEndPoint"><br /><br />
        <br />
        <label for="FirstName"><strong>Please restart application for settings to take effect.</strong></label><br />
    </form>

    <form method="get" action="~/Close/">
        <button type="submit">Close Window</button>

    </form>
</body>
</html>
